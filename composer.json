{
    "name": "pdir/mae_event_categories",
    "type": "contao-module",
    "description": "this plugin allows the definition of additional categories for filtering events in eventlist frontend modules",
    "license": "LGPL-3.0+",
    "keywords": ["contao", "extension", "event", "categories", "category", "filter", "eventlist"],
    "homepage": "https://pdir.de",
    "authors":[
      {
        "name":"Martin Eberhardt",
        "homepage":"http://www.martin-eberhardt.com",
        "role":"Developer"
      },
      {
        "name": "Mathias Arzberger",
        "homepage": "https://pdir.de/",
        "role": "Developer"
      },
      {
        "name": "pdir GmbH",
        "homepage": "https://pdir.de/",
        "role": "Developer"
      }
    ],
    "support":{
      "issues":"https://github.com/pdir/mae_event_categories/issues",
      "source":"https://github.com/pdir/mae_event_categories"
    },
    "require":{
      "php":"^8.0",
      "contao/core-bundle": "^4.13 || ^5.3",
      "contao/calendar-bundle": "^4.13 || ^5.3",
      "contao-community-alliance/composer-plugin":"^2.4|^3.0"
    },
    "conflict": {
      "contao/core": "*",
      "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "autoload": {
      "psr-4": {
        "Pdir\\MaeEventCategoriesBundle\\": "src/"
      }
    },
    "replace":{
      "contao-legacy/mae_event_categories":"self.version"
    },
    "extra": {
      "contao-manager-plugin": "Pdir\\MaeEventCategoriesBundle\\ContaoManager\\Plugin"
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "php-http/discovery": true,
            "contao-community-alliance/composer-plugin": true
        }
    }
}
